<!DOCTYPE html>
<html>
  <head>
    <title>CrookedDees</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <ul class="nav">
        <li class="nav-item">
          <%= link_to 'Home', root_path, { class: 'nav-link' } %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to 'My appointments', appointments_path, { class: 'nav-link' } %>
          </li>
          <% if current_user.is_admin? %>
            <li class="nav-item">
              <%= link_to 'Admin', admin_appointments_path, { class: 'nav-link' } %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to 'Log out', session_path(:current_user), method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign up', new_user_path, { class: 'nav-link' } %>
          </li>
          <li class="nav-item">
            <%= link_to 'Log in', new_session_path, { class: 'nav-link' } %>
          </li>
        <% end %>

      </ul>
    </nav>

    <%= yield %>
  </body>
</html>
