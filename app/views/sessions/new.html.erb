<div class="row justify-content-md-center new-appointment-container">
  <div class="col-md-6">
    <h2>Log In</h2>

    <%= form_for :session, url: sessions_path do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Login', class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
</div>
